<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    tools:context="cloud.himanshu.internshipcamp17.ForgotViaChooserFragment">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forgotChooser">

        <RadioButton
            android:text="Recieve code via Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_email"
            android:layout_weight="1"
            android:textSize="20sp" />
        <RadioButton
            android:text="Recieve code via SMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_mob"
            android:layout_weight="1"
            android:textSize="20sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_next"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" />
    </LinearLayout>
</LinearLayout>
