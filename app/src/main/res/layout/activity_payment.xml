<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="cloud.himanshu.internshipcamp17.PaymentActivity">

    <cloud.himanshu.internshipcamp17.TextView_Lato_Font
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Icamp Fee:-"
        android:textSize="25sp" />

    <cloud.himanshu.internshipcamp17.TextView_Lato_Font
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:text="KIIT: Rs 260"
        android:textSize="25sp" />

    <cloud.himanshu.internshipcamp17.TextView_Lato_Font
        android:id="@+id/textView129"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:text="Others: Rs 412"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/pay_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView129"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:gravity="center"
        android:orientation="vertical">


        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Option 1: Instamojo"
            android:textAlignment="center"
            android:textColor="@color/button_background_pressed_end"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.05"
            app:srcCompat="@drawable/netbanking" />

        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Debit Card, Credit Card, NetBanking, UPI, \nFreecharge, Jio Money, Mobikwik, Ola Money" />

        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="(Instant account activation)"
            android:textStyle="italic" />

        <cloud.himanshu.internshipcamp17.Button_Lato_Light
            android:id="@+id/pay_insta"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_title"
            android:padding="10dp"
            android:text="Pay Now Using Instamojo"
            android:textColor="@color/blue_light" />

        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Option 2: Offline"
            android:textAlignment="center"
            android:textColor="@color/button_background_pressed_end"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.05"
            app:srcCompat="@drawable/netbanking" />

        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Offline Payment helpdesk: "
            android:textStyle="italic" />

        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:id="@+id/atrCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Atrayee: +917077102465"
            android:textStyle="italic" />

        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:id="@+id/mayCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Mayank: +919861658537"
            android:textStyle="italic" />


    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/paymentSnackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back_login" />

    <cloud.himanshu.internshipcamp17.Button_Lato_Light
        android:id="@+id/back_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4c71f5"
        android:gravity="center"
        android:padding="16dp"
        android:text="Back to login"
        android:textColor="#fff"
        android:textSize="16dp" />


</RelativeLayout>