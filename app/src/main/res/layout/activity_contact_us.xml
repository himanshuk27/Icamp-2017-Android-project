<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    app:layout_anchorGravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:src="@drawable/icamp2" />a

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ic_mobile"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp">

            <cloud.himanshu.internshipcamp17.TextView_Lato_Font
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atrayee: +917077102465"
                android:id="@+id/cont1"/>

            <cloud.himanshu.internshipcamp17.TextView_Lato_Font
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mayank: +919861658537"
                android:id="@+id/cont2"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ic_email"
            android:padding="10dp" />

        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:id="@+id/email"
            android:text="ecell.kiit@kiit.ac.in" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ic_website"
            android:padding="10dp" />

        <cloud.himanshu.internshipcamp17.TextView_Lato_Light
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:id="@+id/website"
            android:text="https://interncamp.ecell.org.in" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fbPage"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:src="@drawable/img_facebook" />


</LinearLayout>
